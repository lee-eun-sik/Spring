<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="back.mapper.member.MemberMapper">

    <!-- 회원 전체 조회 -->
    <select id="selectAllMembers" resultType="back.model.user.User">
        SELECT * FROM USERS 
    </select>

    <!-- 회원 삭제 -->
    <delete id="deleteMemberById">
        DELETE FROM users WHERE user_id = #{userId}
    </delete>

    <!-- 회원 단건 조회 -->
    <select id="selectUser" resultType="back.model.user.User">
        SELECT * FROM USERS WHERE USER_ID = #{userId, jdbcType=VARCHAR}
    </select>

    
    <!-- 회원 목록 페이징 조회 -->
    <select id="selectMembersByPage" parameterType="map" resultType="back.model.user.User">
	    SELECT *
	    FROM (
	        SELECT
	            ROW_NUMBER() OVER (
	                <choose>
	                    <when test="sortField != null and sortOrder != null">
	                        ORDER BY ${sortField} ${sortOrder}
	                    </when>
	                    <otherwise>
	                        ORDER BY create_dt DESC
	                    </otherwise>
	                </choose>
	            ) AS rn,
	            user_id,
	            username,
	            gender,
	            phonenumber,
	            email,
	            create_dt
	        FROM users
	    )
	    WHERE rn BETWEEN #{startRow} AND #{endRow}
	</select>

    <!-- 전체 회원 수 조회 -->
     <select id="selectTotalMemberCount" resultType="int">
         SELECT COUNT(*) FROM users
     </select>
	
     <!-- 검색 조건에 따라 회원 목록 조회 -->
	 <select id="searchMembersByKeyword" parameterType="map" resultType="back.model.user.User">
	    SELECT *
	    FROM (
	        SELECT 
	            ROW_NUMBER() OVER (
	                <choose>
	                    <when test="sortField != null and sortOrder != null">
	                        ORDER BY ${sortField} ${sortOrder}
	                    </when>
	                    <otherwise>
	                        ORDER BY create_dt DESC
	                    </otherwise>
	                </choose>
	            ) AS rn,
	            user_id,
	            username,
	            password,
	            gender,
	            phonenumber,
	            email,
	            create_dt
	        FROM users
	        WHERE 1 = 1
	        <if test="searchText != null and searchText != ''">
	            AND username LIKE '%' || #{searchText} || '%'
	        </if>
	        <if test="startDate != null and startDate != ''">
	            <![CDATA[ AND CREATE_DT >= TO_DATE(#{startDate} || ' 00:00:00', 'YYYY-MM-DD HH24:MI:SS') ]]>
	        </if>
	        <if test="endDate != null and endDate != ''">
	            <![CDATA[ AND CREATE_DT <= TO_DATE(#{endDate} || ' 23:59:59', 'YYYY-MM-DD HH24:MI:SS') ]]>
	        </if>
	    )
	    WHERE rn BETWEEN #{startRow} AND #{endRow}
	</select>

     <!-- 검색된 회원 수 -->
    <select id="getSearchMemberCount" parameterType="map" resultType="int">
	    SELECT COUNT(*)
	    FROM users
	    <where>
	        <choose>
	            <when test="searchType == 'userId' and searchKeyword != null and searchKeyword != ''">
	                user_id LIKE '%' || #{searchKeyword} || '%'
	            </when>
	            <when test="searchType == 'userName' and searchKeyword != null and searchKeyword != ''">
	                user_name LIKE '%' || #{searchKeyword} || '%'
	            </when>
	            <when test="searchType == 'email' and searchKeyword != null and searchKeyword != ''">
	                email LIKE '%' || #{searchKeyword} || '%'
	            </when>
	            <!-- 필요한 필드 추가 가능 -->
	        </choose>
	    </where>
	</select>

</mapper>